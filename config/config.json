{
  "system_config": {
    "name": "LLM×SLM ハイブリッドペアプログラミング システム",
    "version": "0.1.0",
    "debug": true,
    "log_level": "INFO"
  },
  
  "llm_config": {
    "provider": "claude",
    "api_key": "YOUR_CLAUDE_API_KEY_HERE",
    "model": "claude-3-sonnet-20240229",
    "max_tokens": 8000,
    "temperature": 0.1,
    "timeout": 60
  },
  
  "slm_config": {
    "provider": "lm_studio",
    "api_endpoint": "http://localhost:1234/v1/chat/completions",
    "model": "deepseek-coder-6.7b-instruct",
    "max_tokens": 2000,
    "temperature": 0.2,
    "timeout": 30,
    "retry_attempts": 3
  },
  
  "workflow_config": {
    "require_human_approval": true,
    "auto_save_instructions": true,
    "instruction_templates_path": "config/instruction_templates",
    "approval_timeout_minutes": 30,
    "backup_instructions": true
  },
  
  "quality_control": {
    "enable_code_review": true,
    "enable_security_check": true,
    "enable_performance_check": true,
    "enable_style_check": true,
    "review_checklist_path": "config/review_checklist.json"
  },
  
  "project_paths": {
    "instructions_dir": "data/instructions",
    "generated_code_dir": "data/generated_code",
    "reviews_dir": "data/reviews",
    "templates_dir": "config/templates",
    "logs_dir": "logs"
  },
  
  "ui_config": {
    "interface": "streamlit",
    "host": "localhost",
    "port": 8501,
    "auto_open_browser": true,
    "theme": "light"
  },
  
  "security": {
    "encrypt_api_keys": true,
    "secure_instruction_storage": true,
    "audit_log": true
  }
}